{
  "manifest_version": 3,
  "name": "Data Leak Defender",
  "version": "4.0.0",
  "description": "Blocks private information like SSNs, emails, phone numbers, and card numbers from leaking to third-party sites.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}